{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "kubestatus2cloudwatch-bebae71a-3c71-4dc2-91f5-2c52a4f53f31",
  "type": "object",
  "title": "Root Schema",
  "required": [
    "dry",
    "seconds",
    "logging",
    "metric",
    "targets"
  ],
  "properties": {
    "dry": {
      "type": "boolean",
      "default": false,
      "examples": [
        false
      ]
    },
    "seconds": {
      "type": "integer"
    },
    "logging": {
      "type": "object",
      "required": [
        "level",
        "pretty"
      ],
      "properties": {
        "level": {
          "type": "string",
          "default": "debug"
        },
        "pretty": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "metric": {
      "type": "object",
      "required": [
        "namespace",
        "name",
        "dimensions"
      ],
      "properties": {
        "namespace": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "dimensions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "value"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "targets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "kind",
          "namespace",
          "name",
          "mode"
        ],
        "properties": {
          "kind": {
            "type": "string"
          },
          "namespace": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "mode": {
            "type": "string"
          }
        }
      }
    }
  }
}
